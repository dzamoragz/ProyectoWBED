<div class="container mt-5">

  <!-- TÍTULO -->
  <div class="row mb-4">
    <div class="col text-center">
      <h3 class="fw-bold">Lista de videojuegos</h3>
    </div>
  </div>

  {{#if videojuegos}}

  <!-- FILTROS -->
  <div class="row g-3 align-items-end mb-4">

    <!-- CATEGORÍA -->
    <div class="col-md-3">
      <label class="form-label fw-semibold">Filtrar por categoría</label>
      <select id="filtroCategoria" class="form-select">
        <option value="">Todas</option>
        <option value="Acción">Acción</option>
        <option value="Aventura">Aventura</option>
        <option value="RPG">RPG</option>
        <option value="Deporte">Deporte</option>
      </select>
    </div>

    <!-- CONSOLA -->
    <div class="col-md-3">
      <label class="form-label fw-semibold">Filtrar por consola</label>
      <select id="filtroConsola" class="form-select">
        <option value="">Todas</option>
        <option value="PlayStation">PlayStation</option>
        <option value="Xbox">Xbox</option>
        <option value="Nintendo Switch">Nintendo Switch</option>
        <option value="PC">PC</option>
      </select>
    </div>

    <!-- TEXTO -->
    <div class="col-md-4">
      <label class="form-label fw-semibold">Buscar por nombre</label>
      <input
        type="text"
        id="filtroTexto"
        class="form-control"
        placeholder="Escribe el nombre del juego..."
      >
    </div>

    <!-- BOTÓN -->
    <div class="col-md-2 d-grid">
      <a href="/videojuego/add" class="btn btn-primary h-100">
        <i class="fa-solid fa-plus me-1"></i> Nuevo
      </a>
    </div>

  </div>

  <!-- TABLA -->
  <div class="row">
    <div class="col-12">
      <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle mb-0">

          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Categoría</th>
              <th>Nombre</th>
              <th>Consola</th>
              <th class="text-center">Acciones</th>
            </tr>
          </thead>

          <tbody id="tablaVideojuegos">
            {{#each videojuegos}}
            <tr class="fila-videojuego"
                data-nombre="{{videojuego}}"
                data-categoria="{{categoria}}"
                data-consola="{{consola}}">
              <td>{{idjuegos}}</td>
              <td>{{categoria}}</td>
              <td>{{videojuego}}</td>
              <td>{{consola}}</td>
              <td class="text-center">
                <div class="btn-group btn-group-sm">
                  <a href="/videojuego/edit/{{idjuegos}}" class="btn btn-warning">
                    <i class="fa-solid fa-pencil"></i>
                  </a>
                  <a href="/videojuego/delete/{{idjuegos}}" class="btn btn-danger">
                    <i class="fa-solid fa-trash"></i>
                  </a>
                </div>
              </td>
            </tr>
            {{/each}}
          </tbody>

          <tfoot class="table-dark">
            <tr>
              <td colspan="6" class="text-center fw-semibold">
                REGISTRO DE VIDEOJUEGOS
              </td>
            </tr>
          </tfoot>

        </table>
      </div>
    </div>
  </div>

  {{else}}

  <!-- SIN DATOS -->
  <div class="row">
    <div class="col">
      <div class="card text-center mx-auto shadow-sm" style="max-width: 400px;">
        <div class="card-header">
          <h4>No hay videojuegos</h4>
        </div>
        <div class="card-body">
          <p class="card-text">
            Presiona el botón para registrar un videojuego.
          </p>
          <a href="/videojuego/add" class="btn btn-primary">
            Crear videojuego
          </a>
        </div>
      </div>
    </div>
  </div>

  {{/if}}

</div>

<!-- JS de filtros -->
<script src="/js/filtros.js"></script>